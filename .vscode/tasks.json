{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build PDF from Markdown",
      "type": "shell",
      "command": "pandoc",
      "args": [
        "${file}",
        "--from=markdown",
        "--to=pdf",
        "--output=${fileDirname}/${fileBasenameNoExtension}.pdf",
        "--pdf-engine=xelatex",
        "--standalone"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
